{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es5",
      "es2015.promise"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/*"
  ]
}
